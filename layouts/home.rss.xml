{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
{{- $pages := (where .Site.RegularPages.ByDate "Section" "in" (slice "reports" "news")) }}<!-- TODO use only `news` and `reports` sections -->
{{- $dateFormat := "Mon, 02 Jan 2006 15:04:05 -0700" }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ .Site.Title }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ .Site.Title }}</description>
        <language>{{ site.Language.LanguageCode }}</language>
        <managingEditor>hello@muzic.live (Muzic.Live)</managingEditor>
        <webMaster>hello@muzic.live (Muzic.Live)</webMaster>
        <copyright>Muzic.Live</copyright>
        <lastBuildDate>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format $dateFormat | safeHTML }}</lastBuildDate>
        {{- with .OutputFormats.Get "RSS" }}
        {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
        {{- end }}
        {{- range ($pages | first .Site.Config.Services.RSS.Limit) }}
        <item>
            <guid>{{ .Permalink }}</guid>
            <link>{{ .Permalink }}</link>
            <title>{{ .Title | transform.XMLEscape | safeHTML }}</title>
            {{- with .Resources.Get .Params.cover }}
            <enclosure url="{{ .Permalink }}" length="{{ .Content | len }}" type="{{ .MediaType }}" />
            {{- end }}
            <pubDate>{{ .PublishDate.Format $dateFormat | safeHTML }}</pubDate>
            <description>{{ .Content | plainify | truncate 1000 | transform.XMLEscape | safeHTML }}</description>
        </item>
        {{- end }}
    </channel>
</rss>
