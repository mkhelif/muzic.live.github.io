{{- $mapkitHandle := "" -}}
{{- $latitude := "" -}}
{{- $longitude := "" -}}
{{- range $term := .GetTerms "locations" -}}
    {{- range (where site.RegularPages "Section" "locations") -}}
        {{- if and (eq $term.LinkTitle .LinkTitle) -}}
            {{- with .Params.calendar -}}
                {{- $mapkitHandle = cond $mapkitHandle $mapkitHandle .apple -}}
            {{- end -}}
            {{- if and (ne .Params.latitude "") (ne .Params.longitude "") -}}
                {{- $latitude  = cond $latitude  $latitude  .Params.latitude -}}
                {{- $longitude = cond $longitude $longitude .Params.longitude -}}
            {{- end -}}
        {{- end -}}
    {{- end -}}
{{- end -}}
{{- /**/ -}}    VALUE=URI;
{{- /**/ -}}    X-APPLE-MAPKIT-HANDLE={{ $mapkitHandle | safeHTML }};
{{- /**/ -}}    X-APPLE-REFERENCEFRAME=0;
{{- /**/ -}}    X-APPLE-RADIUS=140;
{{- /**/ -}}    X-ADDRESS={{ partial "calendar/location.ics" . }};
{{- /**/ -}}    X-TITLE="{{ partial "calendar/location.ics" . -}}"
{{- if and (ne $latitude "") (ne $longitude "") -}}
    :geo:{{ $latitude }},{{ $longitude -}}
{{- end -}}
