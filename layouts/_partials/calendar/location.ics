{{- $locationExist := false -}}
{{- range $index, $location := .GetTerms "locations" -}}
    {{- range (where site.RegularPages "Section" "locations") -}}
        {{- if (eq $location.LinkTitle .LinkTitle) -}}
            {{- $locationExist = true -}}
            {{- .LinkTitle | safeHTML -}}, {{ .Params.address -}}
        {{- end -}}
    {{- end -}}
    {{- if not $locationExist -}}
        {{- if gt $index 0 }}, {{ end -}}
        {{- .LinkTitle | safeHTML -}}
    {{- end -}}
{{- end -}}
